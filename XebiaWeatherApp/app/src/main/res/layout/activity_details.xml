<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"

    android:background="@color/cell_background_color"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/details_dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 jun"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/details_weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_arrow_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_temperatureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 c"
                android:textAllCaps="true"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/details_titleWeatherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 c"
                android:textAllCaps="true"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/details_descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 c"
                android:textAllCaps="true"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/details_pressureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/text_pressure"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/details_humidityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/text_humidity"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/details_windSpeedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/text_windSpeed"
        android:textSize="18sp" />

</LinearLayout>

